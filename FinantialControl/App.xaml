<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinancialControl.App">
    <Application.Resources>
        <ResourceDictionary>
            <Style x:Key="MainStackLayout" TargetType="StackLayout">
                <Setter Property="VerticalOptions" Value="Start"></Setter>
                <Setter Property="BackgroundColor" Value="DarkGray"></Setter>
                <Setter Property="Padding" Value="10"></Setter>
            </Style>
            <Style x:Key="DefaultListView" TargetType="ListView">
                <Setter Property="HasUnevenRows" Value="True"></Setter>
                <Setter Property="VerticalOptions" Value="FillAndExpand"></Setter>
                <Setter Property="HorizontalOptions" Value="FillAndExpand"></Setter>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>